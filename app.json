{
  "expo": {
    "name": "Fizz point",
    "slug": "loyalty-app",
    "version": "1.0.5",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.amarasytem.loyalty-app",
      "buildNumber": "1.0.2",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "This app requires access to your camera for scanning QR codes.",
        "NSUserNotificationUsageDescription": "This app uses notifications to inform you about important updates.",
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to select images."
      }
    },
    "android": {
      "package": "com.amarasystem.loyaltyapp",
      "versionCode": 4,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "NOTIFICATIONS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "androidNavigationBar": {
      "barStyle": "dark-content",
      "backgroundColor": "#ffffff"
    },
    "notification": {
      "color": "#FF7A00"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Camera access is needed to scan the QR code inside the bottle cap and register your product"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "expo-notifications",
      [
        "expo-image-picker",
        {
          "cameraPermission": "Камер ашиглах зөвшөөрөл хэрэгтэй.",
          "photosPermission": "Зургийн сан руу хандах зөвшөөрөл хэрэгтэй."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "aa3019f0-33c3-4d89-bfde-e0cef80729b7"
      }
    },
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/aa3019f0-33c3-4d89-bfde-e0cef80729b7"
    },
    "newArchEnabled": true,
    "owner": "amarasystem"
  }
}
